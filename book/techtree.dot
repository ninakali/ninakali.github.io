        resin->resin_candle
        firemaking->resin_candle
        resin_candle        [label="Resin candle" fillcolor=tomato]
        
        firemaking->soda
        basketry->chalk
        basketry->sand
        
        soda                [label="Soda and potash" fillcolor=tomato]
        
        chalk               [label="Chalk" fillcolor=cornflowerblue]
        chalk->lime
